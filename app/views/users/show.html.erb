<%= render "shared/second-header" %>
<main class="main">
  <div class="inner">
    <div class="event__wrapper">
      <h2 class="page-heading">
        <%= @user.nickname %>さんの情報
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">ニックネーム</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
            <th class="table__col1">ラストネーム</th>
            <td class="table__col2"><%= @user.last_name %></td>
          </tr>
            <th class="table__col1">ファーストネーム</th>
            <td class="table__col2"><%= @user.first_name %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @user.affiliation %></td>
          </tr>
        </tbody>
      </table>
      <h3 class="page-heading">
        <%= @user.nickname %>さんのイベント
      </h3>
      <div class="user__card">
        <%= render partial: 'events/event', collection: @events %>
      </div>
      <div class="register-btn">
        <%= link_to "トップページに戻る", root_path, class: "nav-back-btn" %>
      </div>
    </div>
  </div>
</main>
<%= render "shared/second-footer" %>
