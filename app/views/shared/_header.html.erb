<header class="header">
  <div class="header__inner">
    <div class="nav">
      <div class="nav__left">
        <%= link_to image_tag("troublesolver_navigator.png", class: :logo), root_path %>
      </div>
      <% if user_signed_in? %>
        <div class="nav__right">
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: :nav__logout %>
          <%= link_to "イベント投稿ページへ", new_event_path, class: :nav__btn %>
        </div>
      <% else %>
        <div class="nav__right">
          <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
          <%= link_to "ユーザー新規登録", new_user_registration_path, class: :nav__btn %>
        </div>
      <% end %>
    </div>
  </div>
</header>
