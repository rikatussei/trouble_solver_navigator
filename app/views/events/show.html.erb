<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @event.title %>
      </p>
      <%= link_to "投稿者: #{@event.user.nickname}", user_path(@event.user), class: :prototype__user %>
      <% if current_user == @event.user%>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_event_path(@event), class: :prototype__btn %>
          <%= link_to "削除する", event_path(@event), data: { turbo_method: :delete }, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @event.images %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">タイトル</p>
          <p class="detail__message">
            <%= @event.title %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">説明</p>
          <p class="detail__message">
            <%= @event.description %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with model: [@event, @comment], local: true do |f|%>
            <div class="field">
              <%= f.label :content, "コメント" %><br />
              <%= f.text_field :content, id:"comment_content" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %>
        <% end %>
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.content%>
              <%= link_to "（#{comment.user.name}）", user_path(comment.user), class: :comment_user %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
