<div class="card">
  <%= link_to image_tag(event.images, class: :card__img), event_path(event) %>
  <div class="card__body">
    <%= link_to "イベント名: #{event.title}", event_path(event), class: :card__title %>
    <p class="card__summary">
      <%= "説明 #{event.description}" %>
    </p>
    <%= link_to "投稿者 #{event.user.nickname}", user_path(event.user), class: :card__user %>
  </div>
</div>
