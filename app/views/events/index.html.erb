<main class="main">
  <div class="inner">
    <div class="image-container">
      <%= image_tag 'application_img.png', class: 'greeting-image' %>
        <% if user_signed_in? %>
          <div class="greeting">
          こんにちは、
          <%= link_to "#{current_user.name}さん", user_path(current_user), class: :greeting__link%>
          </div>
          <div class="card__wrapper">
          <%= render partial: 'event', collection: @event %>
          </div>
        <% else %>
          <div class="greeting__text__main">ようこそTroubleSolver Navigatorへ！
          </div>
          <div class="greeting__text__sub">あなたのイベントの解決をサポートします！
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
